#!/usr/bin/env bash

install_rust() {
  local install_type=$1
  local version=$2
  local install_path=$3

  local current_script_path=$(dirname ${BASH_SOURCE[0]})
  local plugin_path=$(dirname $current_script_path)
  local rustup_path=$plugin_path/rustup

  # echo "install_type: $install_type"
  # echo "version: $version"
  # echo "install_path: $install_path"

  not command -v foo >/dev/null 2>&1 || download_rustup $rustup_path

  $rustup_path/rustup.sh --disable-sudo --prefix=$install_path --revision=$version
}

download_rustup() {
  local install_path=$1

  # echo "Downloading rustup to $install_path"
  (
    mkdir -p $install_path
    cd $install_path
    curl -sSf https://static.rust-lang.org/rustup.sh > rustup.sh && chmod +x rustup.sh
    # ./rustup --help
  )
}

install_rust $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
